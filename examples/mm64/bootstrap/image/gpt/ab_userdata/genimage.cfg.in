image <DEPLOY_DIR>/<IMAGE_NAME>.img {
   hdimage {
      partition-table-type = "gpt"
   }

   partition config {
      in-partition-table = true
      image = config.vfat
      partition-type-uuid = F
      bootable = true
      size = 32M
   }

   partition bootA {
      in-partition-table = true
      image = bootA.vfat
      partition-type-uuid = F
      bootable = true
      size = <FW_SIZE>
   }

   partition bootB {
      in-partition-table = true
      image = bootB.vfat
      partition-type-uuid = F
      bootable = true
      size = <FW_SIZE>
   }

   partition rootA {
      in-partition-table = true
      image = rootA.ext4
      partition-type-uuid = L
      size = <ROOT_SIZE>
   }

   partition rootB {
      in-partition-table = true
      image = rootB.ext4
      partition-type-uuid = L
      size = <ROOT_SIZE>
   }

   partition data {
      in-partition-table = true
      image = data.ext4
      partition-type-uuid = L
      size = 64M
   }
}

#image <DEPLOY_DIR>/<IMAGE_NAME>-sparse.img {
