#    }
#}

image config.vfat {
   vfat {
      label = "BOOTFS"
      file "autoboot.txt" { image = "autoboot.txt" }
      extraargs = "-s 1"
   }
   size = 32M
}

image bootA.vfat {
   vfat {
      label = "BOOTA"
   }
   size = <FW_SIZE>
   mountpoint = "/boot/firmware"
   exec-pre = "<SLOTP> A BOOTA"
}

image rootA.ext4 {
   ext4 {
      use-mke2fs = true
      label = "ROOTA"
   }
   size = <ROOT_SIZE>
   mountpoint = "/"
   exec-pre = "<SLOTP> A ROOTA"
}

image bootB.vfat {
   vfat {
      label = "BOOTB"
   }
   size = <FW_SIZE>
   mountpoint = "/boot/firmware"
   exec-pre = "<SLOTP> B BOOTB"
}

image rootB.ext4 {
   ext4 {
      use-mke2fs = true
      label = "ROOTB"
   }
   size = <ROOT_SIZE>
   mountpoint = "/"
   exec-pre = "<SLOTP> B ROOTB"
}

image data.ext4 {
   empty = true
   ext4 {
      use-mke2fs = true
      label = "USERDATA"
   }
   size = 64M
   mountpoint = "/data"
}
