# Multi-image configuration for RAID overlay
# Generates: SD card image (boot) + External drive images (RAID partitions)

# SD Card Image (Boot partition only)
image sdcard.img {
   hdimage {
      align = 8M
      partition-table-type = "mbr"
      fill = true
   }

   partition boot {
      in-partition-table = true
      partition-type = 0xC
      image = boot.vfat
      bootable = true
   }
}

# External Drive Images (one per RAID device)
image external1.img {
   hdimage {
      align = 8M
      partition-table-type = "mbr"
      fill = true
   }

   partition raid1_part1 {
      in-partition-table = true
      partition-type = 0x83
      image = raid1_part1.ext4
   }
}

image external2.img {
   hdimage {
      align = 8M
      partition-table-type = "mbr"
      fill = true
   }

   partition raid1_part2 {
      in-partition-table = true
      partition-type = 0x83
      image = raid1_part2.ext4
   }
}

# Additional external drives for RAID0 (if needed)
image external3.img {
   hdimage {
      align = 8M
      partition-table-type = "mbr"
      fill = true
   }

   partition raid1_part3 {
      in-partition-table = true
      partition-type = 0x83
      image = raid1_part3.ext4
   }
}

image external4.img {
   hdimage {
      align = 8M
      partition-table-type = "mbr"
      fill = true
   }

   partition raid1_part4 {
      in-partition-table = true
      partition-type = 0x83
      image = raid1_part4.ext4
   }
}

# Sparse versions for all images
image sdcard.img.sparse {
   android-sparse {
      image = sdcard.img
   }
}

image external1.img.sparse {
   android-sparse {
      image = external1.img
   }
}

image external2.img.sparse {
   android-sparse {
      image = external2.img
   }
}

image external3.img.sparse {
   android-sparse {
      image = external3.img
   }
}

image external4.img.sparse {
   android-sparse {
      image = external4.img
   }
}

# Base partition definitions from simple_dual
image boot.vfat {
   vfat {
      label = "BOOT"
      extraargs = "-S <SECTOR_SIZE> -i <BOOT_LABEL>"
   }
   size = <RAID_SDCARD_SIZE>
   mountpoint = "/boot/firmware"
   exec-pre = "<SETUP> BOOT <BOOT_UUID> <RAID_UUID>"
}

# RAID filesystem image (created from RAID array)
image raid1.ext4 {
   ext4 {
      label = "RAID<RAID_LEVEL>"
      use-mke2fs = true
      mke2fs-conf = <MKE2FSCONF>
      extraargs = "-U <RAID_UUID>"
   }
   size = <RAID_SIZE>
   mountpoint = "/"
   exec-pre = "<SETUP> RAID1 <BOOT_UUID> <RAID_UUID>"
}

# RAID partition images (base components)
image raid1_part1.ext4 {
   ext4 {
      label = "RAID1P1"
      use-mke2fs = true
      mke2fs-conf = <MKE2FSCONF>
   }
   size = <RAID_PART_SIZE>
   exec-pre = "<SETUP> RAID1P1 <BOOT_UUID> <RAID_UUID>"
}

image raid1_part2.ext4 {
   ext4 {
      label = "RAID1P2"
      use-mke2fs = true
      mke2fs-conf = <MKE2FSCONF>
   }
   size = <RAID_PART_SIZE>
   exec-pre = "<SETUP> RAID1P2 <BOOT_UUID> <RAID_UUID>"
}

image raid1_part3.ext4 {
   ext4 {
      label = "RAID1P3"
      use-mke2fs = true
      mke2fs-conf = <MKE2FSCONF>
   }
   size = <RAID_PART_SIZE>
   exec-pre = "<SETUP> RAID1P3 <BOOT_UUID> <RAID_UUID>"
}

image raid1_part4.ext4 {
   ext4 {
      label = "RAID1P4"
      use-mke2fs = true
      mke2fs-conf = <MKE2FSCONF>
   }
   size = <RAID_PART_SIZE>
   exec-pre = "<SETUP> RAID1P4 <BOOT_UUID> <RAID_UUID>"
}
