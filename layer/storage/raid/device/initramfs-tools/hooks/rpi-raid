#!/bin/bash
set -euo pipefail

case "$1" in
   prereqs) echo ""; exit 0;;
esac

. /usr/share/initramfs-tools/hook-functions

# Function for error handling
die() {
    echo "ERROR: $*" >&2
    exit 1
}

# Copy essential RAID tools with error handling
if ! copy_exec /sbin/mdadm; then
    echo "ERROR: Failed to copy mdadm" >&2
    exit 1
fi
