[Unit]
Description=Disk Expansion Service
After=local-fs.target mdadm.service cryptsetup.target
Before=systemd-user-sessions.service
ConditionPathExists=!/var/lib/disk-expansion.done

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/usr/local/bin/disk-expansion
TimeoutStartSec=300
Restart=always
RestartSec=10
StartLimitInterval=0

[Install]
WantedBy=multi-user.target
