#!/bin/bash
# AppArmor Status Script
# Provides comprehensive status information about AppArmor

echo "=== AppArmor Security Status ==="
echo

# Check if AppArmor is enabled in kernel
echo "1. Kernel AppArmor Support:"
if grep -q "apparmor=1" /proc/cmdline 2>/dev/null; then
    echo "   âœ… AppArmor enabled in kernel boot parameters"
else
    echo "   âŒ AppArmor not enabled in kernel (apparmor=1 missing from cmdline)"
fi

# Check if apparmor service is running
echo
echo "2. AppArmor Service:"
if systemctl is-active --quiet apparmor 2>/dev/null; then
    echo "   âœ… apparmor service is active"
else
    echo "   âš ï¸  apparmor service is not active"
fi

# Check apparmor-utils availability
echo
echo "3. AppArmor Utilities:"
for util in aa-status aa-enforce aa-complain; do
    if command -v "$util" >/dev/null 2>&1; then
        echo "   âœ… $util available"
    else
        echo "   âŒ $util not available"
    fi
done

# Show loaded profiles
echo
echo "4. Loaded AppArmor Profiles:"
if command -v aa-status >/dev/null 2>&1; then
    aa-status 2>/dev/null || echo "   Unable to get profile status"
else
    echo "   aa-status not available"
fi

# Check configuration files
echo
echo "5. Configuration Files:"
config_files=(
    "/etc/apparmor.d/"
    "/etc/apparmor/"
)

for config in "${config_files[@]}"; do
    if [ -e "$config" ]; then
        echo "   âœ… $config exists"
    else
        echo "   âŒ $config not found"
    fi
done

# Check recent audit logs
echo
echo "6. Recent AppArmor Events:"
if [ -f /var/log/audit/audit.log ]; then
    recent_events=$(grep -c "apparmor" /var/log/audit/audit.log 2>/dev/null || echo "0")
    echo "   ðŸ“Š Recent audit events: $recent_events"

    if [ "$recent_events" -gt 0 ]; then
        echo "   ðŸ“‹ Last 3 events:"
        grep "apparmor" /var/log/audit/audit.log 2>/dev/null | tail -3 | sed 's/^/      /'
    fi
elif [ -f /var/log/kern.log ]; then
    recent_events=$(grep -c "apparmor" /var/log/kern.log 2>/dev/null || echo "0")
    echo "   ðŸ“Š Recent kernel events: $recent_events"
else
    echo "   ðŸ“­ No audit logs available"
fi

echo
echo "=== Recommendations ==="
echo "â€¢ Run 'aa-enforce /etc/apparmor.d/*' to set all profiles to enforce mode"
echo "â€¢ Run 'aa-complain /etc/apparmor.d/*' to set all profiles to complain mode"
echo "â€¢ Check logs: tail -f /var/log/audit/audit.log | grep apparmor"
echo "â€¢ Monitor violations: aa-notify -p"
