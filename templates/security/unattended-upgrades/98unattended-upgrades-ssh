// Unattended Upgrades configuration for SSH
// This file configures unattended upgrades to handle SSH service restarts safely

// SSH-specific upgrade configuration
Unattended-Upgrade::Package-Blacklist {
    // Don't upgrade SSH packages automatically to avoid connection drops
    "openssh-server";
    "openssh-client";
};

// Allow SSH upgrades but with custom restart handling
Unattended-Upgrade::Allowed-Origins:: "Debian:stable-security";

// Custom restart hook for SSH
Unattended-Upgrade::Post-Upgrade-Hook "/usr/local/bin/unattended-upgrades-ssh-restart";
